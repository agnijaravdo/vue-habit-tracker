{
  "name": "vue-habit-tracker",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "type-check": "vue-tsc --noEmit -p tsconfig.app.json --composite false",
    "lint": "eslint . --fix",
    "format": "prettier --write src/",
    "lint:style": "npx stylelint \"**/*.(s?css|vue)\"",
    "test": "vitest",
    "test:e2e:ui-mode": "npx playwright test --ui -c playwright.config.ts",
    "test:e2e": "npx playwright test -c playwright.config.ts",
    "test:e2e:chromium": "npx playwright test --headed -c playwright.config.ts --project chromium",
    "report": "npx playwright show-report"
  },
  "dependencies": {
    "@primevue/themes": "^4.1.0",
    "@types/node": "^22.13.4",
    "@vitejs/plugin-vue": "^5.0.5",
    "@vueuse/core": "^11.1.0",
    "eslint": "^8.57.1",
    "primeicons": "^7.0.0",
    "primevue": "^4.2.5",
    "typescript": "^5.5.4",
    "vite": "^5.3.1",
    "vite-plugin-vue-devtools": "^7.3.1",
    "vue": "^3.4.29",
    "vue-confetti-explosion": "^1.0.2",
    "vue-router": "^4.3.3",
    "vue3-emoji-picker": "^1.1.8"
  },
  "devDependencies": {
    "@playwright/test": "^1.50.1",
    "@rushstack/eslint-patch": "^1.8.0",
    "@typescript-eslint/eslint-plugin": "^8.24.1",
    "@typescript-eslint/parser": "^8.24.1",
    "@vue/eslint-config-prettier": "^9.0.0",
    "@vue/eslint-config-typescript": "^13.0.0",
    "autoprefixer": "^10.4.20",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-plugin-vue": "^9.32.0",
    "postcss": "^8.4.47",
    "postcss-html": "^1.7.0",
    "prettier": "^3.2.5",
    "stylelint": "^16.9.0",
    "stylelint-config-standard": "^36.0.1",
    "stylelint-config-standard-vue": "^1.0.0",
    "tailwindcss": "^3.4.13",
    "vite-plugin-vue-devtools": "^7.3.1",
    "vitest": "^3.0.6",
    "vue-eslint-parser": "^9.4.3",
    "vue-tsc": "^2.2.2"
  }
}
